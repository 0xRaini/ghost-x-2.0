{
  "manifest_version": 3,
  "name": "Ghost X",
  "version": "1.0",
  "description": "为 Twitter 提供一个平行的、由用户控制的分发层。",
  "permissions": ["storage", "activeTab", "scripting", "identity"],
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["content.js"]
    }
  ]
}


